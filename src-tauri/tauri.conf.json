{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Schoolab",
  "version": "1.4.6",
  "identifier": "com.schoolab.desktop",
  
  "build": {
    "frontendDist": "../.vite/build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Schoolab",
        "width": 1000,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "msi",
      "nsis"
    ],
    "resources": {
    "../dist-web/": "dist-web/"
  },
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/AngeloNtoto/schoolab/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENBMjE0RTRCMzNCQzk4NkYKUldSdm1Md3pTMDRoeW90WTUvVzVmNkZqMXVYWmgydzlpTEpEY3lVelFta1B1bi9UbEdEZi9lbUwK"
    }
  }
}
